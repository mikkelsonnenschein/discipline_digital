---
import Accordion from '../components/Accordion.astro'
import TableHeader from '../components/TableHeader.astro';

const clientPosts = await Astro.glob(`../posts/clients/*.md`);
const projectPosts = await Astro.glob(`../posts/projects/*.md`);


---

<html lang="en">
	<head>
		<meta charset="utf-8" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />
		<title>đigital điscipline</title>
	</head>
	<body>
		<h1>đigital điscipline</h1>
		<p>I do web- design & development in exchange for artworks or other work. </p>
		<p>~ Contact: <a href="https://www.instagram.com/discipline.digital/">@discipline.digital</a></p>

		<h2>Clients</h2>
		<div class="table">
		<TableHeader />
		<Accordion type={clientPosts}/>
		</div>

		<h2>Projects</h2>
		<div class="table">
		<TableHeader />
		<Accordion type={projectPosts}/>
		</div>

	</body>
</html>

<style>

body {
	max-width: 1080px;
	margin-left: auto;
	margin-right: auto;
	padding-left: 24px;
	padding-right: 24px;
	margin-bottom: 48px;
}

h1 {
	margin-top: 48px;
	margin-bottom: 36px;
}

h2 {
	margin-top: 64px;
}


.table {
	overflow: scroll;
}

</style>
